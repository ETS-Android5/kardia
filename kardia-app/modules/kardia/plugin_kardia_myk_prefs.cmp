$Version=2$
plugin_kardia_myk_prefs "widget/component-decl"
    {
    width=390; height=32;
    description = "Preferences";

    prefs_hbox "widget/hbox"
	{
	x=0; y=0; width=390; height=32;
	spacing=12;
	prefs_img "widget/image" { width=32; source="/apps/kardia/images/tango/preferences-system.png"; }
	prefs_label "widget/label"
	    {
	    widget_class=link;
	    y=4;
	    width=300;
	    font_size=20;
	    style=bold;
	    text="Preferences";

	    onclick "widget/connector"
		{
		event=Click;
		target=plugin_kardia_myk_prefs;
		action=Launch;
		Multi = 1;
		Source = runclient("/apps/kardia/modules/base/prefs.app?ledger=" + :kardia_sysattrs_osrc:Ledger + "&period=" + :kardia_sysattrs_osrc:CurrentPeriod + "&year_period=" + :kardia_sysattrs_osrc:YearPeriod);
		Width=500;
		Height=475;
		}
	    }
	}
    }
